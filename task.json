{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Haskell",
            "type": "shell",
            "command": "ghc",
            "args": ["-o", "${fileDirname}/${fileBasenameNoExtension}", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
